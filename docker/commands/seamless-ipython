set -u -e

# Runs an IPython terminal inside the Seamless Docker image
# - Current directory is mounted to /cwd, and the command is executed there
# - /tmp is mounted as well

docker run --rm -it \
  --network=host \
  -v ~/.seamless/mount:/host \
  -v `pwd`:/cwd \
  -v /tmp:/tmp \
  --workdir /cwd \
  rpbs/seamless ipython3 $*
