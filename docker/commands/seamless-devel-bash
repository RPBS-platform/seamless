set -u -e

# Version of the seamless command that creates an interactive bash shell inside the seamless-devel image

seamlessdir=`python3 -c 'import seamless,os;print(os.path.dirname(seamless.__file__))'`/../

docker run --rm \
  -v $seamlessdir:/seamless \
  -e "PYTHONPATH=/seamless" \
  --network=host \
  -v ~/.seamless/mount:/host \
  -v `pwd`:/cwd \
  -v /tmp:/tmp \
  -v /var/run/docker.sock:/var/run/docker.sock \
  --workdir /cwd \
  -it \
  seamless-devel bash
